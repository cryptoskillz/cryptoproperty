---
layout: layout.njk
pagination:
  data: api.propertiesArray
  size: 1
  alias: properties
permalink: /www/{{ properties.slug }}/
---
<div class="container">
	<div class="row">
		<div class="col-10">
		  <h1>{{properties.Name}}</h1>
		</div>
		<div class="col-2">
			Rent
		</div>
	</div>
	<div class="row">
		<div class="col-10">
		   <h3>{{properties.Address1}} {{properties.Address2}} {{properties.Address3}} {{properties.Address4}} {{properties.Address5}}</h3>
		</div>
		<div class="col-2">
			{% if properties.estimatedrent != null %}
				{{properties.currency}} {{properties.estimatedrent}}
			{% endif %}
		</div>
	</div>
	<row class="" >
		<!--Carousel Wrapper-->
		<div id="carousel-example-2" class="carousel slide carousel-fade z-depth-1-half" data-ride="carousel">
			  <!--Indicators-->
			  <ol class="carousel-indicators">
			  {% for item  in properties.photos %}
			  	<li data-target="#carousel-example-2" data-slide-to="{{item.id}}" class="active"></li>
			  {% endfor %}
			  </ol>
			  <!--/.Indicators-->
			  <!--Slides-->
			  <div class="carousel-inner" role="listbox">
			  	{% for item  in properties.photos %}
			    <div class="carousel-item 

			    {% if item.id == 1 %}
			    active
			    {% endif %}
			    ">
			      <div class="view">
			        <img class="d-block w-100" src="http://localhost:1337/{{item.url}}" alt="">
			        <div class="mask rgba-black-light"></div>
			      </div>
			      <div class="carousel-caption">
			      </div>
			    </div>
			    {% endfor %}
		  </div>
		  <!--/.Slides-->
		  <!--Controls-->
		  <a class="carousel-control-prev" href="#carousel-example-2" role="button" data-slide="prev">
		    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
		    <span class="sr-only">Previous</span>
		  </a>
		  <a class="carousel-control-next" href="#carousel-example-2" role="button" data-slide="next">
		    <span class="carousel-control-next-icon" aria-hidden="true"></span>
		    <span class="sr-only">Next</span>
		  </a>
		  <!--/.Controls-->
		</div>
		<!--/.Carousel Wrapper-->
		</row>
	<row>
		<div class="row">
			<div class="col-sm-12">
				<div class="card">
					 <div class="card-body">
					    <h5 class="card-title">Bedrooms:{{properties.bedrooms}}</h5>
					    <h5 class="card-title">Bathrooms:{{properties.bathrooms}}</h5>
					    <h5 class="card-title">Area:{{properties.Size}}</h5>
					    <h5 class="card-title">Rent:{{properties.estimatedrent}}</h5>
					    <hr>
					    <h5>
					    Description:
					    </h5>
					    <p class="card-text">{{properties.longdescription | safe | nl2br}}</p>

					    <p>
					    <h5>
					    Property features: 
					    </h5>
					    {% for item in properties.property_features %}
					    	{{item.name}}<br>
					    {% endfor %}
					    </p>
					    {{properties.map | safe}}
					</div>
				</div>

			</div>
	</row>
</div>
</div>
